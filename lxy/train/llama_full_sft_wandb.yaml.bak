### model
model_name_or_path: /data/lxy/models/LLM-Research/Meta-Llama-3___1-8B
# /data/lxy/models/Qwen/Qwen2___5-1___5B

### method
stage: sft
do_train: true
finetuning_type: full
# deepspeed: examples/deepspeed/ds_z3_config.json
deepspeed: /data/lxy/LLaMA-Factory/examples/deepspeed/ds_z3_config.json
disable_gradient_checkpointing: False

### dataset
dataset_dir: /data/lxy/LLaMA-Factory/data
dataset: ShareGPT_52K,huatuo_26m_lite_score_5
template: llama3
cutoff_len: 5000
# max_samples: 1000
overwrite_cache: true
preprocessing_num_workers: 16

### output
output_dir: /data/lxy/LLaMA-Factory/lxy/saves/llama_3.1_8b/ShareGPT_52K,huatuo_26m_lite_score_5/2.0e-5/5000
logging_steps: 5
save_steps: 100
plot_loss: true
overwrite_output_dir: /data/lxy/LLaMA-Factory/lxy/saves/llama_3.1_8b/ShareGPT_52K,huatuo_26m_lite_score_5/2.0e-5/5000
report_to : wandb
run_name: ShareGPT_52K,huatuo_26m_lite_score_5_2.0e-5_5000

### train
per_device_train_batch_size: 1
gradient_accumulation_steps: 16
learning_rate: 2.0e-5
num_train_epochs: 2.0
lr_scheduler_type: cosine
warmup_ratio: 0.1
bf16: true
flash_attn: fa2
ddp_timeout: 180000000

### eval
val_size: 0.1
per_device_eval_batch_size: 2
eval_strategy: steps
eval_steps: 10